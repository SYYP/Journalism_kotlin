<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">
<LinearLayout
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:cardCornerRadius="@dimen/sw_25dp"
            android:background="?android:selectableItemBackground"
            android:layout_margin="2dp"
            app:cardElevation="1dp">

            <ImageView
                android:clickable="true"
                android:id="@+id/tv_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:cardCornerRadius="@dimen/sw_25dp"
            android:background="?android:selectableItemBackground"
            android:layout_margin="2dp"
            app:cardElevation="1dp">

            <ImageView
                android:clickable="true"
                android:id="@+id/tv_pink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary_Pink" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:cardCornerRadius="@dimen/sw_25dp"
            android:background="?android:selectableItemBackground"
            android:layout_margin="2dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/tv_orange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/colorPrimary_Orange" />
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:cardCornerRadius="@dimen/sw_25dp"
            android:background="?android:selectableItemBackground"
            android:layout_margin="2dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/tv_yellow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary_Yellow" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:cardCornerRadius="@dimen/sw_25dp"
            android:background="?android:selectableItemBackground"
            android:layout_margin="2dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/tv_green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/colorPrimary_Green" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:cardCornerRadius="@dimen/sw_25dp"
            android:layout_margin="2dp"
            android:background="?android:selectableItemBackground"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/tv_sky"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/colorPrimary_Sky" />
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:background="?android:selectableItemBackground"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:cardCornerRadius="@dimen/sw_25dp"
            android:layout_margin="2dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/tv_blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary_Blue" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:cardCornerRadius="@dimen/sw_25dp"
            android:layout_margin="2dp"
            android:background="?android:selectableItemBackground"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/tv_purple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/colorPrimary_Purple" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:cardCornerRadius="@dimen/sw_25dp"
            android:layout_margin="2dp"
            android:background="?android:selectableItemBackground"
            app:cardElevation="1dp">
            <ImageView
                android:id="@+id/tv_pp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/colorPrimary_PP" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
</LinearLayout>