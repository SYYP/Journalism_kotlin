<resources>

    <!-- Base application theme. -->
    <style name="AppTheme_Sky" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme_Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Blue</item>
        <item name="colorAccent">@color/colorAccent_Blue</item>
    </style>

    <style name="AppTheme_Green" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Green</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Green</item>
        <item name="colorAccent">@color/colorAccent_Green</item>
    </style>

    <style name="AppTheme_Orange" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Orange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Orange</item>
        <item name="colorAccent">@color/colorAccent_Orange</item>
    </style>

    <style name="AppTheme_Pink" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Pink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Pink</item>
        <item name="colorAccent">@color/colorAccent_Pik</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Sky</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Sky</item>
        <item name="colorAccent">@color/colorPrimaryDark_Sky</item>
    </style>

    <style name="AppTheme_Purple" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Purple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Purple</item>
        <item name="colorAccent">@color/colorAccent_Purple</item>
    </style>

    <style name="AppTheme_PP" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_PP</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_PP</item>
        <item name="colorAccent">@color/colorAccent_PP</item>
    </style>

    <style name="AppTheme_Yellow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Yellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Yellow</item>
        <item name="colorAccent">@color/colorAccent_Yellow</item>
    </style>
    <!-- 关于文本样式 -->
    <style name="TextAboutEditorItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/sw_10dp</item>
        <item name="android:textSize">@dimen/sw_18sp</item>
    </style>
    <!--设置白天主题-->
    <style name="DayTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">#03A9F4</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="colorAccent">#00BCD4</item>
        <item name="colorControlNormal">#00BCD4</item>
        <item name="tiltestyle">@style/NightTitleStyle</item>
        <item name="contentStyle">@style/NightTextContentStyle</item>
        <item name="android:textColor">#000000</item>

    </style>

    <!--夜间主题-->

    <style name="NightTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">#00796B</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="colorAccent">#00796B</item>
        <item name="tiltestyle">@style/NightTitleStyle</item>
        <item name="contentStyle">@style/DarkTextContentStyle</item>
        <item name="colorControlNormal">#212121</item>
        <item name="android:textColor">#ffffff</item>

    </style>

    <style name="NightTitleStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/sw_20sp</item>
    </style>
    <style name="NightTextContentStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/sw_16sp</item>
    </style>
    <style name="DarkTitleStyle">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">@dimen/sw_20sp</item>
    </style>
    <style name="DarkTextContentStyle">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">@dimen/sw_16sp</item>
    </style>
</resources>
